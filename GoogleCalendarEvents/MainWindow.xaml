<Window x:Class="GoogleCalendarEvents.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GoogleCalendarEvents"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="450" Loaded="Window_Loaded" >
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="3*" />
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Upcoming Events" VerticalAlignment="Center" HorizontalAlignment="Center" />
        <TextBlock x:Name="EventsBlock" Grid.Row="1" />

    </Grid>
</Window>
